# def configure(conf):
#     conf.check_nonfatal(header_name='stdint.h', define_name='HAVE_STDINT_H')

def build(bld):
    module = bld.create_ns3_module('pfabric', ['internet',
                                              'csma',
                                              'applications',
                                              'traffic-control',
                                              'point-to-point-layout', 'timely'])
    module.source = [
			'model/pfabric-queue-disc.cc',
        ]

    module_test = bld.create_ns3_module_test_library('pfabric')
    module_test.source = [
        ]

    headers = bld(features='ns3header')
    headers.module = 'pfabric'
    headers.source = [
            'model/pfabric-queue-disc.h',
    ]

    if bld.env.ENABLE_EXAMPLES:
        bld.recurse('examples')

    # bld.ns3_python_bindings()
